<UserControl x:Class="ChessUI.PromotionMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ChessUI"
             mc:Ignorable="d"
             d:DesignHeight="125" d:DesignWidth="275">
    <Border Width="275" Height="125" Style="{StaticResource BorderStyle}">
        <Grid RenderOptions.BitmapScalingMode="HighQuality">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1.5*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="SELECT A PIECE" Style="{StaticResource TextStyle}" FontSize="28"/>
            
            <UniformGrid Grid.Row="1" Rows="1" Columns="4" Cursor="Hand">
                <Image Name="QueenImg" MouseDown="QueenImg_OnMouseDown" Source="./Assets/QueenW.png"/>
                <Image Name="BishopImg" MouseDown="BishopImg_OnMouseDown" Source="./Assets/BishopW.png"/>
                <Image Name="RookImg" MouseDown="RookImg_OnMouseDown" Source="./Assets/RookW.png"/>
                <Image Name="KnightImg" MouseDown="KnightImg_OnMouseDown" Source="./Assets/KnightW.png"/>
            </UniformGrid>
        </Grid>
    </Border>
</UserControl>
